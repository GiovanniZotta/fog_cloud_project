  "scripts": {
    "clean": "npx rimraf build .generated",
    "build": "npx ttsc --project tsconfig.json",
    "lint": "npx eslint --fix \"{services,libs,scripts}/**/*.{ts,js}\"",
    "format": "npx prettier --write \"{services,libs,scripts}/**/*.{ts,js}\"",
    "gen:graphql": "npx cross-env NODE_ENV=development ts-node scripts/gen-graphql",
    "start:dev:gateway": "npx cross-env NODE_ENV=development ts-node-dev --prefer-ts true --no-notify --quiet --exit-child -r tsconfig-paths/register --transpile-only services/gateway/bootstrap.ts | npx pino-pretty",
    "start:dev:service:products": "npx cross-env NODE_ENV=development ts-node-dev --prefer-ts true --no-notify --quiet --exit-child -r tsconfig-paths/register --transpile-only services/service-products/bootstrap.ts | npx pino-pretty"
  },
  "devDependencies": {
    "@graphql-tools/utils": "^7.9.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^15.0.2",
    "@types/pino": "^6.3.8",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "chalk": "^4.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "pino-pretty": "^4.8.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-loader": "^9.1.2",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.4",
    "typescript-transform-paths": "^2.2.3"
  },
  "dependencies": {
    "@apollo/federation": "^0.25.0",
    "@apollo/gateway": "^0.28.1",
    "apollo-graphql": "^0.9.2",
    "apollo-server-fastify": "^2.24.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.1",
    "dotenv": "^9.0.2",
    "envalid": "^7.1.0",
    "fastify": "^2.15.3",
    "graphql": "^15.5.0",
    "graphql-scalars": "^1.9.3",
    "graphql-tag": "^2.12.4",
    "pg": "^8.6.0",
    "pino": "^6.11.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.32"
  }
}
